background no
    use_xft yes
    xftfont Terminus:size=12

    gap_x 8
    gap_y 4

    own_window yes
    own_window_transparent yes
    own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
    own_window_type normal

    double_buffer yes
    update_interval 1
    total_run_times 0

    draw_shades no
    draw_borders no
    draw_outline no

    # size 24 512

    alignment bottom_left

    TEXT
$kernel\
  ${fs_free /}\
  ${fs_free /home}\
  ${acpitemp}C\
  $mem\
  $battery_time
